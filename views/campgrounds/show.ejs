<%include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>

        <div class="col-md-9">
            <!--
            <figure class="figure">
                <img src="<%= campground.image %>" class="figure-img"/>
                <figcaption class="figure-caption text-right">$9/night</figcaption>
            </figure>
            -->


            
            <div class="card">
                <img src="<%= campground.image %>" class="card-img-top"/>
                <div class="card-body">
                    <h4 class="card-text text-right"> $9/night</h4>
                    <h4><a><%=campground.name%></a></h4>
                    <p><%= campground.description %></p>
                </div>
            </div>
            <div class="media my-3 border border-gray rounded p-4 bg-light">
                <div class="media-body">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add New Comment</a>
                    </div>
                    <% campground.comments.forEach((comment) => { %>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="my-3 d-flex justify-content-between">
                                    <span><strong><%= comment.author %></strong></span>
                                    <span class="ml-auto">10 days ago</span>
                                </div>
                                <p>
                                    <%= comment.text %>
                                </p>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
<%include ../partials/footer %>