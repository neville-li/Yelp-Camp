<%include ../partials/header %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to YelpCamp!</h1>
            <p>View our hand picked campgrounds from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campgrround</a>
            </p>
        </div>
    </header>

    <div class="row" style="display: flex; flex-warp: wrap;">
        <% campgrounds.forEach((campground) => { %>
            <div class="col-sm-6 col-md-3">
                <div class="card text-center">
                    <img src="<%= campground.image%>" class="card-img-top">
                    <div class="card-body">
                        <h4 class="card-text"> <%= campground.name %></h4>
                    </div>
                    <p>
                        <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary btn-lg text-white">More Info</a>
                    </p>  
                </div>   
            </div>
        <%});%>
    </div>

</div>



<%include ../partials/footer %>